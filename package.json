{
  "name": "steam-deck-dub-edition",
  "version": "1.0.0",
  "description": "Steam Deck DUB Edition - A comprehensive guide and utility for Steam Deck users",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:web": "webpack serve --mode development",
    "dev:hot": "webpack serve --mode development --hot",
    "lint": "eslint . --config config/.eslintrc.json",
    "lint:fix": "eslint . --config config/.eslintrc.json --fix",
    "lint:css": "stylelint \"src/styles/**/*.css\" \"src/components/**/*.css\" --config config/.stylelintrc.json",
    "lint:css:fix": "stylelint \"src/styles/**/*.css\" \"src/components/**/*.css\" --config config/.stylelintrc.json --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "test": "jest --config config/jest.config.js",
    "build": "npm run generate-icons && electron-builder",
    "build:web": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:web:dev": "webpack --mode development",
    "build:web:prod": "webpack --mode production",
    "postinstall": "electron-builder install-app-deps",
    "fix:all": "./scripts/fix-all.sh",
    "fix:css": "node scripts/unified-css-fixer.js",
    "fix:css:deep": "node scripts/unified-css-fixer.js --deep-clean",
    "fix:css:report": "node scripts/unified-css-fixer.js --report-only",
    "fix:js": "node scripts/enhance-error-handling.js",
    "fix:a11y": "node scripts/improve-accessibility.js",
    "analyze": "webpack --mode production --analyze",
    "generate-icons": "node scripts/generate-icons.js",
    "clean": "rm -rf dist build",
    "deploy": "./scripts/deploy.sh",
    "deploy:web": "./scripts/deploy.sh --web",
    "deploy:electron": "./scripts/deploy.sh --electron"
  },
  "author": {
    "name": "Steam Deck DUB Edition Team",
    "email": "team@steamdeckdubedition.com",
    "url": "https://github.com/steamdeckdubedition"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.23.9",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "^3.41.0",
    "critical-css-webpack-plugin": "^3.0.0",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^7.0.6",
    "electron": "^24.8.8",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "file-loader": "^6.2.0",
    "glob": "^11.0.1",
    "html-validate": "^9.5.2",
    "html-webpack-plugin": "^5.6.0",
    "image-minimizer-webpack-plugin": "^3.8.3",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.7.0",
    "jsdom": "^24.1.3",
    "mini-css-extract-plugin": "^2.8.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "sharp": "^0.33.5",
    "style-loader": "^3.3.4",
    "stylelint": "^16.16.0",
    "stylelint-config-standard": "^37.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.3",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.steamdeckdubedition.app",
    "productName": "Steam Deck DUB Edition",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/js/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "scripts/**/*"
    ],
    "compression": "maximum",
    "icon": "src/assets/icons/icon.png",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Steam Deck DUB Edition Team <team@steamdeckdubedition.com>",
      "icon": "src/assets/icons"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "icon": "src/assets/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/assets/icons/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "steamdeckdubedition",
      "repo": "steam-deck-dub-edition"
    }
  }
}
